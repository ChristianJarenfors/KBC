@using KBC.Models;
@{
    ViewBag.Title = "SearchResult";
}

<body>   
    <section class="section-search">
        <div class="container-fluid">
            <form action="/Search/SearchResult" method="post">
                <input type="text" name="Search" placeholder="Textsearch" />
