<body class="user-profile-body">
    <br />
    <br />
    <br />
    <br />

    <!--- BEGIN USER MAIN---->
    <div class="container" id="user-profile-containter">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="centerBlock">
                    <div class="card">
                        <div class="cardheader">
                            <!--some text inside cardheader if desired-->
                        </div>
                        <div class="avatar">
                            <img alt="useravatar" src="http://placehold.it/140x100">
                        </div>
                        <div id="usernameheader">
                            @Model.Username
                        </div>

                        <div class="cardcontent">
                            <div id="userlocation"><span class="glyphicon glyphicon-map-marker"></span> @Model.Country</div>
                            <div id="userbirthday"><span class="glyphicon glyphicon-gift"></span> @Model.Age</div>
                            <div id="useremail"><span class="glyphicon glyphicon-envelope"></span> @Model.Email</div>
                        </div>

                        <br />
                        <div class="cardfooter">
                            <button type="button" class="label label-default" data-toggle="modal" data-target="#editProfileModal">edit</button>
                        </div>
                    </div>
                    </div>
                </div>
        </div>
    </div>
    <!---END USER MAIN---->


    <!-- BEGIN EDIT PROFILE MODAL -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="editProfileLabel">Edit Profile</h4>
                </div>
                <br />
                <br />
                <br />
                
                <!-- [Edit Avatar] -->
                <div class="modal-body">
                    <div class="avatar">
                        <img alt="useravatar" src="http://placehold.it/140x100">
                    </div>

                    <span class="btn btn-primary btn-file">
                        <span class="">Upload avatar</span>
                        <span class="fileupload-new"></span><input type="file" />
                    </span>
                    <hr />
                    <!-- [Edit Username] -->
                    <form name="form" id="form" class="form-horizontal" action="EditDetails" method="post">
                        <div class="control-group">
                            <label class="control-label" for="inputName">Username</label>
                            <div class="controls">
                                <input type="text" name="name" id="inputName" value="" placeholder="@Model.Username" maxlength="75" readonly />
                            </div>
                        </div>

                        <!-- [Edit Location] -->
                        <div class="control-group">
                            <label class="control-label" for="inputLocation">Location</label>
                            <div class="controls">
                                <input type="text" name="location" id="inputLocation" value="" placeholder="@Model.Country" maxlength="50" />
                            </div>
                        </div>

                        <!-- [Edit Birthday] todo fix format of date-->
                        <div class="control-group">
                            <label class="control-label" for="inputBirthday">Age</label>
                            <div class="controls">
                                <input type="text" name="birthday" id="inputBirthday" value="" placeholder="@Model.Age" maxlength="25" />
                            </div>
                        </div>

                        <!-- [Edit Email-address] -->
                        <div class="control-group">
                            <label class="control-label" for="inputEmail">Email</label>
                            <div class="controls">
                                <div class="input-append">
                                    <input type="text" name="email" id="inputEmail" value="" placeholder="@Model.Email" maxlength="50" />
                                </div>
                            </div>
                        </div>

                        <!-- [SUBMIT / RETURN] -->
                        <div class="control-group">
                            <div class="controls">
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Return</button>
                                    <button type="submit" class="btn btn-success">Save changes</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END EDIT PROFILE MODAL -->





</body>
