    @* ----Javascript----- *@
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <script src="~/Scripts/grayscale.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>


    @* ----Fonts----- *@
    <link href='https://fonts.googleapis.com/css?family=Lato:400,700,900' rel='stylesheet' type='text/css'>
</head>

<body id="page-top">
    <!-- Navigation -->
    <div class="container-fluid">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <!-- Texten och knapp för att komma till toppen. -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    @*Tre streck när man förminskar, kan bytas till bild*@
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <!-- Länk till förstasidan, kan lägga en bra ikon här -->
                <a class="navbar-brand" href="~/Home/Index">KBC</a>
            </div>

            <!-- Lista med nav länkarna -->
            <div class="collapse navbar-collapse navbar-right">

                <ul class="nav navbar-nav">

                    <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>

                    @*@if ((bool)Session["UserLoggedIn"] == true)
                {
                    <li style="color:green;">You are logged in as: <strong style="color:white;">@Session["CurrentUser"]</strong></li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@Session["CurrentUser"]<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Profile</a></li>
                                <li><a href="/User/Logout">Logout</a></li>
                            </ul>
                        </li>

                }
                else
                {
                    <li style="color:red;">You are <u>NOT</u> logged in!</li>

                }*@
                    
                    <li>
                        <a href="~/Library/Index" id="nav-länkarna">Library</a>
                    </li>

                    <!-- ------------- Dropdown Login och dropdown profil ----------------------- -->

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" id="nav-länkarna">Profil<span class="caret"></span></a>
                        <!-- ------------- Här ändrar du färg på bakgrunden på dropdown ----------------------- -->
                        <ul class="dropdown-menu" role="menu" id="login-dp">
                            <li><a href="~/Search/SearchResult" id="nav-länkarna">Search</a></li>
                            @*<li><a href="~/SerieProfile/Index">Serie Info</a></li>*@                            
                            <li><a href="~/Help/Index">Support</a></li>
                            <li class="divider"></li>
                            <li><a href="~/Grade/Index">Create review</a></li>
                            <li class="divider"></li>
                            <li><a href="#">To my profile</a></li>
                            <br />
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="nav-länkarna">Login</a>
                        <ul id="login-dp" class="dropdown-menu">
                            <li>
                                <div class="row">
                                    <div class="col-md-12">
                                        <form class="form" role="form" method="post" action="/User/Login" accept-charset="UTF-8" id="login-nav">
                                            <div class="form-group">
                                                <label class="sr-only" for="exampleInputEmail2">Username</label>
                                                <input type="text" class="form-control" name="Username" placeholder="Username" required>
                                            </div>
                                            <div class="form-group">
                                                <label class="sr-only" for="exampleInputPassword2">Password</label>
                                                <input type="password" name="Password" class="form-control" placeholder="Password" required>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-success btn-block" id="btn-login" style="text-transform: uppercase;">Sign in</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="bottom text-center">
                                        <a href="~/User/Index" class="btn btn-warning btn-block">Register</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
                <div class="collapse navbar-collapse navbar-left">

                    <form action="/Search/SearchResult" method="post" id="nav-search" class="navbar-form" role="search">
                        <div class="form-group">
                            <input type="text" name="Search" class="form-control" placeholder="Search">
                        </div>
                                <button type="submit" class="btn btn-warning">Submit</button>
                    </form>
                    
                </div>
            

        </nav>
    </div>



    <div class="container-fluid body-content">
        @RenderBody()
        <br />
        <br />
        <br />
        <hr />
        <footer id="footer">
            <center><p>&copy; @DateTime.Now.Year - KBC series!</p></center>
        </footer>
    </div>
</body>
</html>
